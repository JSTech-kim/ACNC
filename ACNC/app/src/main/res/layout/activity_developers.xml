<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_developers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jstech.acnc.Environment.DevelopersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding = "10sp"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_developers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developers"
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:paddingLeft="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:background="@color/colorLightViolet"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="10sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="335sp"
            android:layout_marginTop="40sp"
            android:src="@drawable/acnc_snap_shot"
            android:layout_weight="0.36" />


        <TextView
            android:id="@+id/tv_developers_mention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hyeon Ji N Sub"
            android:textSize="20sp"
            android:layout_marginTop="30sp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
