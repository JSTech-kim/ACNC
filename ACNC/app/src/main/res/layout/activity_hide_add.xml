<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_hide_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.jstech.acnc.Hide.HideAddActivity"
                android:background="@color/colorLabel">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/tv_subject_name"
            android:text="NAME"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="10sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_subject_phone"
            android:text="PHONE"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_subject_email"
            android:text="E-MAIL"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"/>

    </LinearLayout>

    <FrameLayout  android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.jstech.acnc.Hide.HideAddActivity"
                    android:background="@color/colorWhite">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view_add"
            android:scrollbars="vertical"
            android:layout_alignParentEnd="true"/>

    </FrameLayout>


</LinearLayout>

